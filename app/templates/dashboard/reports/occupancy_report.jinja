{% extends "base.jinja" %}

{% block title %}Relatório de Ocupação de Salas - Sistema de Gerenciamento de Salas{% endblock %}

{% block extra_css %}
<style>
    .chart-container {
        height: 400px;
    }
    .filter-card {
        position: sticky;
        top: 20px;
    }
</style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">
            <i class="fas fa-chart-line me-2"></i>
            Relatório de Ocupação de Salas
        </h1>
        
        <div>
            <a href="/dashboard/reports" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i> Voltar
            </a>
            <button type="button" class="btn btn-success" id="export-report">
                <i class="fas fa-file-excel me-1"></i> Exportar
            </button>
            <button type="button" class="btn btn-primary" id="print-report">
                <i class="fas fa-print me-1"></i> Imprimir
            </button>
        </div>
    </div>

    <div class="row">
        <!-- Filtros -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow filter-card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-filter me-2"></i>
                        Filtros
                    </h5>
                </div>
                <div class="card-body">
                    <form method="get" action="/dashboard/reports/occupancy_report">
                        <!-- Período -->
                        <div class="mb-3">
                            <label for="period" class="form-label">Período</label>
                            <select class="form-select" id="period" name="period">
                                <option value="daily" {% if period == 'daily' %}selected{% endif %}>Diário</option>
                                <option value="weekly" {% if period == 'weekly' %}selected{% endif %}>Semanal</option>
                                <option value="monthly" {% if period == 'monthly' %}selected{% endif %}>Mensal</option>
                                <option value="quarterly" {% if period == 'quarterly' %}selected{% endif %}>Trimestral</option>
                                <option value="yearly" {% if period == 'yearly' %}selected{% endif %}>Anual</option>
                            </select>
                        </div>
                        
                        <!-- Data Início -->
                        <div class="mb-3">
                            <label for="start_date" class="form-label">Data Início</label>
                            <input type="date" class="form-control" id="start_date" name="start_date" 
                                   value="{{ start_date.strftime('%Y-%m-%d') if start_date else '' }}">
                        </div>
                        
                        <!-- Data Fim -->
                        <div class="mb-3">
                            <label for="end_date" class="form-label">Data Fim</label>
                            <input type="date" class="form-control" id="end_date" name="end_date" 
                                   value="{{ end_date.strftime('%Y-%m-%d') if end_date else '' }}">
                        </div>
                        
                        <!-- Departamento -->
                        <div class="mb-3">
                            <label for="department_id" class="form-label">Departamento</label>
                            <select class="form-select" id="department_id" name="department_id">
                                <option value="">Todos</option>
                                {% for department in departments %}
                                <option value="{{ department.id }}" {% if selected_department_id == department.id %}selected{% endif %}>
                                    {{ department.name }}
                                </option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <!-- Sala -->
                        <div class="mb-3">
                            <label for="room_id" class="form-label">Sala</label>
                            <select class="form-select" id="room_id" name="room_id">
                                <option value="">Todas</option>
                                {% for room in rooms %}
                                <option value="{{ room.id }}" {% if selected_room_id == room.id %}selected{% endif %}>
                                    {{ room.code }} - {{ room.name }}
                                </option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <!-- Botões -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-1"></i> Filtrar
                            </button>
                            <a href="/dashboard/reports/occupancy_report" class="btn btn-secondary">
                                <i class="fas fa-redo me-1"></i> Limpar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Conteúdo do Relatório -->
        <div class="col-lg-9">
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>
                        Taxa de Ocupação
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container mb-4">
                        <canvas id="occupancyChart"></canvas>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Taxa de Ocupação Média:</strong> {{ average_occupancy|round(2) }}%
                    </div>
                </div>
            </div>
            
            <!-- Ocupação por Sala -->
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Ocupação por Sala
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container mb-4">
                        <canvas id="roomOccupancyChart"></canvas>
                    </div>
                </div>
            </div>
            
            <!-- Ocupação por Departamento -->
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>
                        Ocupação por Departamento
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container mb-4">
                        <canvas id="departmentOccupancyChart"></canvas>
                    </div>
                </div>
            </div>
            
            <!-- Tabela de Dados -->
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-table me-2"></i>
                        Dados Detalhados
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped" id="occupancyTable">
                            <thead>
                                <tr>
                                    <th>Período</th>
                                    <th>Sala</th>
                                    <th>Departamento</th>
                                    <th>Horas Disponíveis</th>
                                    <th>Horas Ocupadas</th>
                                    <th>Taxa de Ocupação</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in occupancy_data %}
                                <tr>
                                    <td>{{ item.period }}</td>
                                    <td>{{ item.room_code }} - {{ item.room_name }}</td>
                                    <td>{{ item.department_name }}</td>
                                    <td>{{ item.available_hours }}</td>
                                    <td>{{ item.occupied_hours }}</td>
                                    <td>{{ item.occupancy_rate|round(2) }}%</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2"></script>
<script>
    // Configurar gráfico de ocupação
    const occupancyCtx = document.getElementById('occupancyChart').getContext('2d');
    const occupancyChart = new Chart(occupancyCtx, {
        type: 'line',
        data: {
            labels: {{ occupancy_chart_data.labels|tojson }},
            datasets: [{
                label: 'Taxa de Ocupação (%)',
                data: {{ occupancy_chart_data.values|tojson }},
                backgroundColor: 'rgba(78, 115, 223, 0.05)',
                borderColor: 'rgba(78, 115, 223, 1)',
                pointRadius: 3,
                pointBackgroundColor: 'rgba(78, 115, 223, 1)',
                pointBorderColor: 'rgba(78, 115, 223, 1)',
                pointHoverRadius: 5,
                pointHoverBackgroundColor: 'rgba(78, 115, 223, 1)',
                pointHoverBorderColor: 'rgba(78, 115, 223, 1)',
                pointHitRadius: 10,
                pointBorderWidth: 2,
                fill: true
            }]
        },
        options: {
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    max: 100,
                    ticks: {
                        callback: function(value) {
                            return value + '%';
                        }
                    }
                }
            },
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return context.dataset.label + ': ' + context.parsed.y.toFixed(2) + '%';
                        }
                    }
                }
            }
        }
    });
    
    // Configurar gráfico de ocupação por sala
    const roomOccupancyCtx = document.getElementById('roomOccupancyChart').getContext('2d');
    const roomOccupancyChart = new Chart(roomOccupancyCtx, {
        type: 'bar',
        data: {
            labels: {{ room_chart_data.labels|tojson }},
            datasets: [{
                label: 'Taxa de Ocupação (%)',
                data: {{ room_chart_data.values|tojson }},
                backgroundColor: [
                    'rgba(78, 115, 223, 0.8)',
                    'rgba(28, 200, 138, 0.8)',
                    'rgba(54, 185, 204, 0.8)',
                    'rgba(246, 194, 62, 0.8)',
                    'rgba(231, 74, 59, 0.8)',
                    'rgba(90, 92, 105, 0.8)',
                    'rgba(133, 135, 150, 0.8)',
                    'rgba(111, 66, 193, 0.8)',
                    'rgba(32, 201, 166, 0.8)',
                    'rgba(253, 126, 20, 0.8)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    max: 100,
                    ticks: {
                        callback: function(value) {
                            return value + '%';
                        }
                    }
                }
            },
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return context.dataset.label + ': ' + context.parsed.y.toFixed(2) + '%';
                        }
                    }
                }
            }
        }
    });
    
    // Configurar gráfico de ocupação por departamento
    const departmentOccupancyCtx = document.getElementById('departmentOccupancyChart').getContext('2d');
    const departmentOccupancyChart = new Chart(departmentOccupancyCtx, {
        type: 'pie',
        data: {
            labels: {{ department_chart_data.labels|tojson }},
            datasets: [{
                data: {{ department_chart_data.values|tojson }},
                backgroundColor: [
                    '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b',
                    '#5a5c69', '#858796', '#6f42c1', '#20c9a6', '#fd7e14'
                ],
                hoverBackgroundColor: [
                    '#2e59d9', '#17a673', '#2c9faf', '#f4b619', '#e02d1b',
                    '#4e4f58', '#717384', '#5d37a8', '#1aa88f', '#ee7308'
                ],
                hoverBorderColor: 'rgba(234, 236, 244, 1)',
            }]
        },
        options: {
            maintainAspectRatio: false,
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return context.label + ': ' + context.parsed.toFixed(2) + '%';
                        }
                    }
                }
            }
        }
    });
    
    // Exportar relatório
    document.getElementById('export-report').addEventListener('click', function() {
        // Aqui seria implementada a lógica para exportar para Excel
        alert('Funcionalidade de exportação será implementada em breve!');
    });
    
    // Imprimir relatório
    document.getElementById('print-report').addEventListener('click', function() {
        window.print();
    });
</script>
{% endblock %}
