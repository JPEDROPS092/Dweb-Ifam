{% extends "base.jinja" %}

{% block title %}Relatório por Departamento - Sistema de Gerenciamento de Salas{% endblock %}

{% block extra_css %}
<style>
    .chart-container {
        height: 400px;
    }
    .filter-card {
        position: sticky;
        top: 20px;
    }
</style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">
            <i class="fas fa-building me-2"></i>
            Relatório de Uso por Departamento
        </h1>
        
        <div>
            <a href="/dashboard/reports" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i> Voltar
            </a>
            <button type="button" class="btn btn-success" id="export-report">
                <i class="fas fa-file-excel me-1"></i> Exportar
            </button>
            <button type="button" class="btn btn-primary" id="print-report">
                <i class="fas fa-print me-1"></i> Imprimir
            </button>
        </div>
    </div>

    <div class="row">
        <!-- Filtros -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow filter-card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-filter me-2"></i>
                        Filtros
                    </h5>
                </div>
                <div class="card-body">
                    <form method="get" action="/dashboard/reports/department_report">
                        <!-- Período -->
                        <div class="mb-3">
                            <label for="period" class="form-label">Período</label>
                            <select class="form-select" id="period" name="period">
                                <option value="daily" {% if period == 'daily' %}selected{% endif %}>Diário</option>
                                <option value="weekly" {% if period == 'weekly' %}selected{% endif %}>Semanal</option>
                                <option value="monthly" {% if period == 'monthly' %}selected{% endif %}>Mensal</option>
                                <option value="quarterly" {% if period == 'quarterly' %}selected{% endif %}>Trimestral</option>
                                <option value="yearly" {% if period == 'yearly' %}selected{% endif %}>Anual</option>
                            </select>
                        </div>
                        
                        <!-- Data Início -->
                        <div class="mb-3">
                            <label for="start_date" class="form-label">Data Início</label>
                            <input type="date" class="form-control" id="start_date" name="start_date" 
                                   value="{{ start_date.strftime('%Y-%m-%d') if start_date else '' }}">
                        </div>
                        
                        <!-- Data Fim -->
                        <div class="mb-3">
                            <label for="end_date" class="form-label">Data Fim</label>
                            <input type="date" class="form-control" id="end_date" name="end_date" 
                                   value="{{ end_date.strftime('%Y-%m-%d') if end_date else '' }}">
                        </div>
                        
                        <!-- Departamento -->
                        <div class="mb-3">
                            <label for="department_id" class="form-label">Departamento</label>
                            <select class="form-select" id="department_id" name="department_id">
                                <option value="">Todos</option>
                                {% for department in departments %}
                                <option value="{{ department.id }}" {% if selected_department_id == department.id %}selected{% endif %}>
                                    {{ department.name }}
                                </option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <!-- Botões -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-1"></i> Filtrar
                            </button>
                            <a href="/dashboard/reports/department_report" class="btn btn-secondary">
                                <i class="fas fa-redo me-1"></i> Limpar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Conteúdo do Relatório -->
        <div class="col-lg-9">
            <!-- Resumo -->
            <div class="row mb-4">
                <!-- Total de Reservas -->
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total de Reservas</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ total_reservations }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Horas Totais -->
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Horas Totais</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ total_hours }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-clock fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Média por Departamento -->
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Média por Departamento</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ average_per_department }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-building fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Gráfico de Reservas por Departamento -->
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Reservas por Departamento
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container mb-4">
                        <canvas id="departmentReservationsChart"></canvas>
                    </div>
                </div>
            </div>
            
            <!-- Gráfico de Horas por Departamento -->
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>
                        Horas de Uso por Departamento
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container mb-4">
                        <canvas id="departmentHoursChart"></canvas>
                    </div>
                </div>
            </div>
            
            <!-- Tendência de Uso por Departamento -->
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>
                        Tendência de Uso por Departamento
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container mb-4">
                        <canvas id="departmentTrendChart"></canvas>
                    </div>
                </div>
            </div>
            
            <!-- Tabela de Dados -->
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-table me-2"></i>
                        Dados Detalhados
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped" id="departmentTable">
                            <thead>
                                <tr>
                                    <th>Departamento</th>
                                    <th>Total de Reservas</th>
                                    <th>Horas de Uso</th>
                                    <th>% do Total</th>
                                    <th>Salas Utilizadas</th>
                                    <th>Média de Duração</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in department_data %}
                                <tr>
                                    <td>{{ item.department_name }}</td>
                                    <td>{{ item.total_reservations }}</td>
                                    <td>{{ item.total_hours }}</td>
                                    <td>{{ item.percentage|round(2) }}%</td>
                                    <td>{{ item.rooms_used }}</td>
                                    <td>{{ item.average_duration }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Configurar gráfico de reservas por departamento
    const departmentReservationsCtx = document.getElementById('departmentReservationsChart').getContext('2d');
    const departmentReservationsChart = new Chart(departmentReservationsCtx, {
        type: 'bar',
        data: {
            labels: {{ department_reservations_chart.labels|tojson }},
            datasets: [{
                label: 'Número de Reservas',
                data: {{ department_reservations_chart.values|tojson }},
                backgroundColor: 'rgba(78, 115, 223, 0.8)',
                borderColor: 'rgba(78, 115, 223, 1)',
                borderWidth: 1
            }]
        },
        options: {
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
    
    // Configurar gráfico de horas por departamento
    const departmentHoursCtx = document.getElementById('departmentHoursChart').getContext('2d');
    const departmentHoursChart = new Chart(departmentHoursCtx, {
        type: 'pie',
        data: {
            labels: {{ department_hours_chart.labels|tojson }},
            datasets: [{
                data: {{ department_hours_chart.values|tojson }},
                backgroundColor: [
                    '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b',
                    '#5a5c69', '#858796', '#6f42c1', '#20c9a6', '#fd7e14'
                ],
                hoverBackgroundColor: [
                    '#2e59d9', '#17a673', '#2c9faf', '#f4b619', '#e02d1b',
                    '#4e4f58', '#717384', '#5d37a8', '#1aa88f', '#ee7308'
                ],
                hoverBorderColor: 'rgba(234, 236, 244, 1)',
            }]
        },
        options: {
            maintainAspectRatio: false,
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return context.label + ': ' + context.parsed + ' horas';
                        }
                    }
                }
            }
        }
    });
    
    // Configurar gráfico de tendência por departamento
    const departmentTrendCtx = document.getElementById('departmentTrendChart').getContext('2d');
    const departmentTrendChart = new Chart(departmentTrendCtx, {
        type: 'line',
        data: {
            labels: {{ department_trend_chart.labels|tojson }},
            datasets: [
                {% for dataset in department_trend_chart.datasets %}
                {
                    label: '{{ dataset.label }}',
                    data: {{ dataset.data|tojson }},
                    backgroundColor: '{{ dataset.backgroundColor }}',
                    borderColor: '{{ dataset.borderColor }}',
                    pointRadius: 3,
                    pointBackgroundColor: '{{ dataset.borderColor }}',
                    pointBorderColor: '{{ dataset.borderColor }}',
                    pointHoverRadius: 5,
                    pointHoverBackgroundColor: '{{ dataset.borderColor }}',
                    pointHoverBorderColor: '{{ dataset.borderColor }}',
                    pointHitRadius: 10,
                    pointBorderWidth: 2,
                    fill: false
                }{% if not loop.last %},{% endif %}
                {% endfor %}
            ]
        },
        options: {
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Número de Reservas'
                    }
                }
            }
        }
    });
    
    // Exportar relatório
    document.getElementById('export-report').addEventListener('click', function() {
        // Aqui seria implementada a lógica para exportar para Excel
        alert('Funcionalidade de exportação será implementada em breve!');
    });
    
    // Imprimir relatório
    document.getElementById('print-report').addEventListener('click', function() {
        window.print();
    });
</script>
{% endblock %}
