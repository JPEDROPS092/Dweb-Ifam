{% extends "base.jinja" %}

{% block title %}{{ report_title|default('Relatório', true) }} - Sistema de Gerenciamento de Salas{% endblock %}

{% block extra_css %}
<style>
    .chart-container {
        height: 400px;
    }
    
    @media print {
        .no-print {
            display: none !important;
        }
        
        .page-break {
            page-break-before: always;
        }
        
        body {
            padding: 0;
            margin: 0;
        }
        
        .container-fluid {
            width: 100%;
            max-width: 100%;
            padding: 0;
            margin: 0;
        }
        
        .card {
            border: none !important;
            box-shadow: none !important;
        }
        
        .card-header {
            background-color: #f8f9fa !important;
            color: #000 !important;
            border-bottom: 1px solid #dee2e6 !important;
        }
    }
    
    .report-header {
        margin-bottom: 2rem;
    }
    
    .report-footer {
        margin-top: 2rem;
        font-size: 0.8rem;
        color: #6c757d;
    }
</style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Botões de Ação (não imprimíveis) -->
    <div class="d-flex justify-content-between align-items-center mb-4 no-print">
        <h1 class="h2">
            <i class="fas fa-file-alt me-2"></i>
            {{ report_title|default('Relatório', true) }}
        </h1>
        
        <div>
            <a href="{{ return_url|default('/dashboard/reports', true) }}" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i> Voltar
            </a>
            <button type="button" class="btn btn-success" id="export-report">
                <i class="fas fa-file-excel me-1"></i> Exportar
            </button>
            <button type="button" class="btn btn-primary" id="print-report">
                <i class="fas fa-print me-1"></i> Imprimir
            </button>
        </div>
    </div>

    <!-- Cabeçalho do Relatório -->
    <div class="report-header">
        <div class="row">
            <div class="col-md-6">
                <h2>{{ report_title|default('Relatório', true) }}</h2>
                <p>{{ report_description|default('', true) }}</p>
            </div>
            <div class="col-md-6 text-md-end">
                <p>
                    <strong>Período:</strong> {{ report_period|default('', true) }}<br>
                    <strong>Gerado em:</strong> {{ report_generated_at|default(now.strftime('%d/%m/%Y %H:%M'), true) }}<br>
                    <strong>Gerado por:</strong> {{ report_generated_by|default(request.user.name ~ ' ' ~ request.user.surname, true) }}
                </p>
            </div>
        </div>
        
        {% if report_filters %}
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-filter me-2"></i>
                    Filtros Aplicados
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    {% for filter in report_filters %}
                    <div class="col-md-4 mb-2">
                        <strong>{{ filter.label }}:</strong> {{ filter.value }}
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    <!-- Conteúdo do Relatório -->
    <div class="report-content">
        <!-- Resumo -->
        {% if show_summary|default(true, true) and summary_data %}
        <div class="row mb-4">
            {% for item in summary_data %}
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-{{ item.color|default('primary', true) }} shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-{{ item.color|default('primary', true) }} text-uppercase mb-1">
                                    {{ item.label }}</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ item.value }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-{{ item.icon|default('chart-bar', true) }} fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% endif %}
        
        <!-- Gráficos -->
        {% if show_charts|default(true, true) and charts %}
        <div class="row mb-4">
            {% for chart in charts %}
            <div class="col-lg-{{ chart.width|default(6, true) }} mb-4">
                <div class="card shadow h-100">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-{{ chart.icon|default('chart-bar', true) }} me-2"></i>
                            {{ chart.title }}
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="{{ chart.id }}"></canvas>
                        </div>
                        {% if chart.description %}
                        <div class="mt-3">
                            <p class="text-muted">{{ chart.description }}</p>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% endif %}
        
        <!-- Tabelas de Dados -->
        {% if show_tables|default(true, true) and tables %}
        {% for table in tables %}
        <div class="card shadow mb-4 {% if not loop.first %}page-break{% endif %}">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-table me-2"></i>
                    {{ table.title }}
                </h5>
            </div>
            <div class="card-body">
                {% if table.description %}
                <p class="mb-3">{{ table.description }}</p>
                {% endif %}
                
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                {% for header in table.headers %}
                                <th>{{ header }}</th>
                                {% endfor %}
                            </tr>
                        </thead>
                        <tbody>
                            {% for row in table.rows %}
                            <tr>
                                {% for cell in row %}
                                <td>{{ cell }}</td>
                                {% endfor %}
                            </tr>
                            {% endfor %}
                        </tbody>
                        {% if table.footer %}
                        <tfoot>
                            <tr>
                                {% for cell in table.footer %}
                                <td>{{ cell }}</td>
                                {% endfor %}
                            </tr>
                        </tfoot>
                        {% endif %}
                    </table>
                </div>
                
                {% if table.note %}
                <div class="mt-3">
                    <small class="text-muted">{{ table.note }}</small>
                </div>
                {% endif %}
            </div>
        </div>
        {% endfor %}
        {% endif %}
        
        <!-- Conteúdo Adicional -->
        {% if additional_content %}
        <div class="card shadow mb-4 page-break">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Informações Adicionais
                </h5>
            </div>
            <div class="card-body">
                {{ additional_content|safe }}
            </div>
        </div>
        {% endif %}
    </div>
    
    <!-- Rodapé do Relatório -->
    <div class="report-footer">
        <div class="row">
            <div class="col-md-6">
                <p>Sistema de Gerenciamento de Salas</p>
            </div>
            <div class="col-md-6 text-md-end">
                <p>Página 1 de 1</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Inicializar gráficos
    {% if show_charts|default(true, true) and charts %}
    {% for chart in charts %}
    const {{ chart.id }}Ctx = document.getElementById('{{ chart.id }}').getContext('2d');
    const {{ chart.id }}Chart = new Chart({{ chart.id }}Ctx, {{ chart.config|tojson }});
    {% endfor %}
    {% endif %}
    
    // Exportar relatório
    document.getElementById('export-report').addEventListener('click', function() {
        // Aqui seria implementada a lógica para exportar para Excel
        alert('Funcionalidade de exportação será implementada em breve!');
    });
    
    // Imprimir relatório
    document.getElementById('print-report').addEventListener('click', function() {
        window.print();
    });
</script>
{% endblock %}
