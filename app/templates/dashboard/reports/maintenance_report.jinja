{% extends "base.jinja" %}

{% block title %}Relatório de Manutenção - Sistema de Gerenciamento de Salas{% endblock %}

{% block extra_css %}
<style>
    .chart-container {
        height: 400px;
    }
    .filter-card {
        position: sticky;
        top: 20px;
    }
    .status-badge {
        width: 15px;
        height: 15px;
        display: inline-block;
        border-radius: 50%;
        margin-right: 5px;
    }
    .status-disponivel {
        background-color: #1cc88a;
    }
    .status-manutencao {
        background-color: #e74a3b;
    }
    .status-ocupada {
        background-color: #4e73df;
    }
    .status-reservada {
        background-color: #f6c23e;
    }
    .status-inativa {
        background-color: #858796;
    }
</style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">
            <i class="fas fa-tools me-2"></i>
            Relatório de Manutenção
        </h1>
        
        <div>
            <a href="/dashboard/reports" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i> Voltar
            </a>
            <button type="button" class="btn btn-success" id="export-report">
                <i class="fas fa-file-excel me-1"></i> Exportar
            </button>
            <button type="button" class="btn btn-primary" id="print-report">
                <i class="fas fa-print me-1"></i> Imprimir
            </button>
        </div>
    </div>

    <div class="row">
        <!-- Filtros -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow filter-card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-filter me-2"></i>
                        Filtros
                    </h5>
                </div>
                <div class="card-body">
                    <form method="get" action="/dashboard/reports/maintenance_report">
                        <!-- Período -->
                        <div class="mb-3">
                            <label for="period" class="form-label">Período</label>
                            <select class="form-select" id="period" name="period">
                                <option value="daily" {% if period == 'daily' %}selected{% endif %}>Diário</option>
                                <option value="weekly" {% if period == 'weekly' %}selected{% endif %}>Semanal</option>
                                <option value="monthly" {% if period == 'monthly' %}selected{% endif %}>Mensal</option>
                                <option value="quarterly" {% if period == 'quarterly' %}selected{% endif %}>Trimestral</option>
                                <option value="yearly" {% if period == 'yearly' %}selected{% endif %}>Anual</option>
                            </select>
                        </div>
                        
                        <!-- Data Início -->
                        <div class="mb-3">
                            <label for="start_date" class="form-label">Data Início</label>
                            <input type="date" class="form-control" id="start_date" name="start_date" 
                                   value="{{ start_date.strftime('%Y-%m-%d') if start_date else '' }}">
                        </div>
                        
                        <!-- Data Fim -->
                        <div class="mb-3">
                            <label for="end_date" class="form-label">Data Fim</label>
                            <input type="date" class="form-control" id="end_date" name="end_date" 
                                   value="{{ end_date.strftime('%Y-%m-%d') if end_date else '' }}">
                        </div>
                        
                        <!-- Departamento -->
                        <div class="mb-3">
                            <label for="department_id" class="form-label">Departamento</label>
                            <select class="form-select" id="department_id" name="department_id">
                                <option value="">Todos</option>
                                {% for department in departments %}
                                <option value="{{ department.id }}" {% if selected_department_id == department.id %}selected{% endif %}>
                                    {{ department.name }}
                                </option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <!-- Status -->
                        <div class="mb-3">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-select" id="status" name="status">
                                <option value="">Todos</option>
                                {% for option in room_status_options %}
                                <option value="{{ option.value }}" {% if selected_status == option.value %}selected{% endif %}>
                                    {{ option.label }}
                                </option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <!-- Botões -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-1"></i> Filtrar
                            </button>
                            <a href="/dashboard/reports/maintenance_report" class="btn btn-secondary">
                                <i class="fas fa-redo me-1"></i> Limpar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Conteúdo do Relatório -->
        <div class="col-lg-9">
            <!-- Resumo -->
            <div class="row mb-4">
                <!-- Total de Salas -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total de Salas</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.total_rooms }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-door-open fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Salas em Manutenção -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-danger shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                        Em Manutenção</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.maintenance_rooms }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-tools fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Salas Disponíveis -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Disponíveis</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.available_rooms }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tempo Médio em Manutenção -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Tempo Médio em Manutenção</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.avg_maintenance_time }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-clock fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Gráfico de Status das Salas -->
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>
                        Status das Salas
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container mb-4">
                        <canvas id="roomStatusChart"></canvas>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex flex-wrap">
                            <div class="me-4 mb-2">
                                <span class="status-badge status-disponivel"></span> Disponível
                            </div>
                            <div class="me-4 mb-2">
                                <span class="status-badge status-manutencao"></span> Em Manutenção
                            </div>
                            <div class="me-4 mb-2">
                                <span class="status-badge status-ocupada"></span> Ocupada
                            </div>
                            <div class="me-4 mb-2">
                                <span class="status-badge status-reservada"></span> Reservada
                            </div>
                            <div class="me-4 mb-2">
                                <span class="status-badge status-inativa"></span> Inativa
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Histórico de Manutenção -->
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-2"></i>
                        Histórico de Manutenção
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container mb-4">
                        <canvas id="maintenanceHistoryChart"></canvas>
                    </div>
                </div>
            </div>
            
            <!-- Manutenção por Departamento -->
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Manutenção por Departamento
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container mb-4">
                        <canvas id="departmentMaintenanceChart"></canvas>
                    </div>
                </div>
            </div>
            
            <!-- Tabela de Salas em Manutenção -->
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-table me-2"></i>
                        Salas em Manutenção
                    </h5>
                </div>
                <div class="card-body">
                    {% if maintenance_rooms %}
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped" id="maintenanceTable">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Nome</th>
                                    <th>Localização</th>
                                    <th>Departamento</th>
                                    <th>Em Manutenção Desde</th>
                                    <th>Tempo em Manutenção</th>
                                    <th>Responsável</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for room in maintenance_rooms %}
                                <tr>
                                    <td>{{ room.code }}</td>
                                    <td>{{ room.name }}</td>
                                    <td>{{ room.building }}, {{ room.floor }}</td>
                                    <td>{{ room.department_name }}</td>
                                    <td>{{ room.maintenance_since.strftime('%d/%m/%Y %H:%M') }}</td>
                                    <td>{{ room.maintenance_time }}</td>
                                    <td>{{ room.responsible }}</td>
                                    <td>
                                        <a href="/rooms/{{ room.id }}" class="btn btn-sm btn-info" title="Detalhes">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        {% if request.user.role in ['ADMIN', 'ADMINISTRADOR', 'GESTOR'] %}
                                        <a href="/rooms/{{ room.id }}/edit" class="btn btn-sm btn-warning" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-success" 
                                                onclick="changeRoomStatus({{ room.id }}, 'DISPONIVEL')" title="Marcar como Disponível">
                                            <i class="fas fa-check"></i>
                                        </button>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i> Não há salas em manutenção no momento.
                    </div>
                    {% endif %}
                </div>
            </div>
            
            <!-- Histórico de Manutenção de Todas as Salas -->
            <div class="card shadow mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-2"></i>
                        Histórico de Manutenção de Todas as Salas
                    </h5>
                </div>
                <div class="card-body">
                    {% if maintenance_history %}
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped" id="historyTable">
                            <thead>
                                <tr>
                                    <th>Sala</th>
                                    <th>Departamento</th>
                                    <th>Data Início</th>
                                    <th>Data Fim</th>
                                    <th>Duração</th>
                                    <th>Responsável</th>
                                    <th>Observações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for history in maintenance_history %}
                                <tr>
                                    <td>{{ history.room_code }} - {{ history.room_name }}</td>
                                    <td>{{ history.department_name }}</td>
                                    <td>{{ history.start_date.strftime('%d/%m/%Y %H:%M') }}</td>
                                    <td>{{ history.end_date.strftime('%d/%m/%Y %H:%M') if history.end_date else 'Em andamento' }}</td>
                                    <td>{{ history.duration }}</td>
                                    <td>{{ history.responsible }}</td>
                                    <td>{{ history.notes }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i> Não há registros de manutenção no período selecionado.
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Configurar gráfico de status das salas
    const roomStatusCtx = document.getElementById('roomStatusChart').getContext('2d');
    const roomStatusChart = new Chart(roomStatusCtx, {
        type: 'pie',
        data: {
            labels: {{ room_status_chart.labels|tojson }},
            datasets: [{
                data: {{ room_status_chart.values|tojson }},
                backgroundColor: [
                    '#1cc88a', // Disponível
                    '#e74a3b', // Em Manutenção
                    '#4e73df', // Ocupada
                    '#f6c23e', // Reservada
                    '#858796'  // Inativa
                ],
                hoverBackgroundColor: [
                    '#17a673',
                    '#e02d1b',
                    '#2e59d9',
                    '#f4b619',
                    '#717384'
                ],
                hoverBorderColor: 'rgba(234, 236, 244, 1)',
            }]
        },
        options: {
            maintainAspectRatio: false,
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return context.label + ': ' + context.parsed + ' salas';
                        }
                    }
                }
            }
        }
    });
    
    // Configurar gráfico de histórico de manutenção
    const maintenanceHistoryCtx = document.getElementById('maintenanceHistoryChart').getContext('2d');
    const maintenanceHistoryChart = new Chart(maintenanceHistoryCtx, {
        type: 'line',
        data: {
            labels: {{ maintenance_history_chart.labels|tojson }},
            datasets: [{
                label: 'Salas em Manutenção',
                data: {{ maintenance_history_chart.values|tojson }},
                backgroundColor: 'rgba(231, 74, 59, 0.05)',
                borderColor: 'rgba(231, 74, 59, 1)',
                pointRadius: 3,
                pointBackgroundColor: 'rgba(231, 74, 59, 1)',
                pointBorderColor: 'rgba(231, 74, 59, 1)',
                pointHoverRadius: 5,
                pointHoverBackgroundColor: 'rgba(231, 74, 59, 1)',
                pointHoverBorderColor: 'rgba(231, 74, 59, 1)',
                pointHitRadius: 10,
                pointBorderWidth: 2,
                fill: true
            }]
        },
        options: {
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
    
    // Configurar gráfico de manutenção por departamento
    const departmentMaintenanceCtx = document.getElementById('departmentMaintenanceChart').getContext('2d');
    const departmentMaintenanceChart = new Chart(departmentMaintenanceCtx, {
        type: 'bar',
        data: {
            labels: {{ department_maintenance_chart.labels|tojson }},
            datasets: [{
                label: 'Número de Manutenções',
                data: {{ department_maintenance_chart.values|tojson }},
                backgroundColor: 'rgba(231, 74, 59, 0.8)',
                borderColor: 'rgba(231, 74, 59, 1)',
                borderWidth: 1
            }]
        },
        options: {
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
    
    // Função para mudar o status da sala
    function changeRoomStatus(roomId, status) {
        if (confirm('Tem certeza que deseja alterar o status desta sala?')) {
            fetch(`/api/rooms/${roomId}/status`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ status: status })
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Erro ao alterar status da sala');
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                alert('Erro ao alterar status da sala');
            });
        }
    }
    
    // Exportar relatório
    document.getElementById('export-report').addEventListener('click', function() {
        // Aqui seria implementada a lógica para exportar para Excel
        alert('Funcionalidade de exportação será implementada em breve!');
    });
    
    // Imprimir relatório
    document.getElementById('print-report').addEventListener('click', function() {
        window.print();
    });
</script>
{% endblock %}
