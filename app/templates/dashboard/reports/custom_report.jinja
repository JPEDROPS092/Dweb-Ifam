{% extends "base.jinja" %}

{% block title %}Relatório Personalizado - Sistema de Gerenciamento de Salas{% endblock %}

{% block extra_css %}
<style>
    .chart-container {
        height: 400px;
    }
    .filter-card {
        position: sticky;
        top: 20px;
    }
</style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">
            <i class="fas fa-cogs me-2"></i>
            Relatório Personalizado
        </h1>
        
        <div>
            <a href="/dashboard/reports" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i> Voltar
            </a>
            <button type="button" class="btn btn-success" id="export-report" disabled>
                <i class="fas fa-file-excel me-1"></i> Exportar
            </button>
            <button type="button" class="btn btn-primary" id="print-report" disabled>
                <i class="fas fa-print me-1"></i> Imprimir
            </button>
        </div>
    </div>

    <div class="row">
        <!-- Filtros -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow filter-card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-filter me-2"></i>
                        Configuração do Relatório
                    </h5>
                </div>
                <div class="card-body">
                    <form id="reportForm" method="post" action="/dashboard/reports/custom_report/generate">
                        <!-- Título do Relatório -->
                        <div class="mb-3">
                            <label for="report_title" class="form-label">Título do Relatório *</label>
                            <input type="text" class="form-control" id="report_title" name="report_title" 
                                   placeholder="Ex: Análise de Ocupação por Departamento" required>
                        </div>
                        
                        <!-- Tipo de Dados -->
                        <div class="mb-3">
                            <label for="data_type" class="form-label">Tipo de Dados *</label>
                            <select class="form-select" id="data_type" name="data_type" required>
                                <option value="">Selecione o tipo de dados</option>
                                <option value="reservations">Reservas</option>
                                <option value="rooms">Salas</option>
                                <option value="departments">Departamentos</option>
                                <option value="users">Usuários</option>
                                <option value="maintenance">Manutenção</option>
                            </select>
                        </div>
                        
                        <!-- Período -->
                        <div class="mb-3">
                            <label for="period" class="form-label">Período</label>
                            <select class="form-select" id="period" name="period">
                                <option value="daily">Diário</option>
                                <option value="weekly">Semanal</option>
                                <option value="monthly" selected>Mensal</option>
                                <option value="quarterly">Trimestral</option>
                                <option value="yearly">Anual</option>
                                <option value="custom">Personalizado</option>
                            </select>
                        </div>
                        
                        <!-- Datas Personalizadas (inicialmente ocultas) -->
                        <div id="custom-dates" class="d-none">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="start_date" class="form-label">Data Início</label>
                                    <input type="date" class="form-control" id="start_date" name="start_date">
                                </div>
                                <div class="col-md-6">
                                    <label for="end_date" class="form-label">Data Fim</label>
                                    <input type="date" class="form-control" id="end_date" name="end_date">
                                </div>
                            </div>
                        </div>
                        
                        <!-- Filtros Adicionais -->
                        <div class="mb-3">
                            <label class="form-label">Filtros Adicionais</label>
                            <div class="card">
                                <div class="card-body">
                                    <!-- Departamento -->
                                    <div class="mb-3">
                                        <label for="department_id" class="form-label">Departamento</label>
                                        <select class="form-select" id="department_id" name="department_id">
                                            <option value="">Todos</option>
                                            {% for department in departments %}
                                            <option value="{{ department.id }}">
                                                {{ department.name }}
                                            </option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    
                                    <!-- Status (para salas ou reservas) -->
                                    <div class="mb-3 filter-reservations filter-rooms d-none">
                                        <label for="status" class="form-label">Status</label>
                                        <select class="form-select" id="status" name="status">
                                            <option value="">Todos</option>
                                            <optgroup label="Status de Salas" class="filter-rooms">
                                                {% for option in room_status_options %}
                                                <option value="{{ option.value }}" class="room-status">
                                                    {{ option.label }}
                                                </option>
                                                {% endfor %}
                                            </optgroup>
                                            <optgroup label="Status de Reservas" class="filter-reservations">
                                                {% for option in reservation_status_options %}
                                                <option value="{{ option.value }}" class="reservation-status">
                                                    {{ option.label }}
                                                </option>
                                                {% endfor %}
                                            </optgroup>
                                        </select>
                                    </div>
                                    
                                    <!-- Usuário (para reservas) -->
                                    <div class="mb-3 filter-reservations d-none">
                                        <label for="user_id" class="form-label">Usuário</label>
                                        <select class="form-select" id="user_id" name="user_id">
                                            <option value="">Todos</option>
                                            {% for user in users %}
                                            <option value="{{ user.id }}">
                                                {{ user.name }} {{ user.surname }}
                                            </option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    
                                    <!-- Capacidade (para salas) -->
                                    <div class="mb-3 filter-rooms d-none">
                                        <label for="capacity" class="form-label">Capacidade Mínima</label>
                                        <input type="number" class="form-control" id="capacity" name="capacity" 
                                               min="1" placeholder="Ex: 20">
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Visualizações -->
                        <div class="mb-3">
                            <label class="form-label">Visualizações</label>
                            <div class="card">
                                <div class="card-body">
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="checkbox" id="show_summary" name="show_summary" checked>
                                        <label class="form-check-label" for="show_summary">
                                            Resumo
                                        </label>
                                    </div>
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="checkbox" id="show_charts" name="show_charts" checked>
                                        <label class="form-check-label" for="show_charts">
                                            Gráficos
                                        </label>
                                    </div>
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="checkbox" id="show_table" name="show_table" checked>
                                        <label class="form-check-label" for="show_table">
                                            Tabela de Dados
                                        </label>
                                    </div>
                                    
                                    <!-- Tipos de Gráficos -->
                                    <div id="chart-types" class="mt-3">
                                        <label class="form-label">Tipos de Gráficos</label>
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox" id="chart_bar" name="chart_types[]" value="bar" checked>
                                            <label class="form-check-label" for="chart_bar">
                                                Gráfico de Barras
                                            </label>
                                        </div>
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox" id="chart_line" name="chart_types[]" value="line" checked>
                                            <label class="form-check-label" for="chart_line">
                                                Gráfico de Linha
                                            </label>
                                        </div>
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox" id="chart_pie" name="chart_types[]" value="pie" checked>
                                            <label class="form-check-label" for="chart_pie">
                                                Gráfico de Pizza
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Botões -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-cog me-1"></i> Gerar Relatório
                            </button>
                            <button type="reset" class="btn btn-secondary">
                                <i class="fas fa-redo me-1"></i> Limpar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Conteúdo do Relatório -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0" id="report-title">
                        <i class="fas fa-file-alt me-2"></i>
                        Relatório Personalizado
                    </h5>
                </div>
                <div class="card-body">
                    <div id="report-placeholder" class="text-center py-5">
                        <i class="fas fa-chart-bar fa-4x text-muted mb-3"></i>
                        <h4>Configure e gere seu relatório personalizado</h4>
                        <p class="text-muted">
                            Selecione os parâmetros desejados no formulário ao lado e clique em "Gerar Relatório".
                        </p>
                    </div>
                    
                    <div id="report-content" class="d-none">
                        <!-- O conteúdo do relatório será carregado aqui via AJAX -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Mostrar/ocultar datas personalizadas
    document.getElementById('period').addEventListener('change', function() {
        const customDates = document.getElementById('custom-dates');
        if (this.value === 'custom') {
            customDates.classList.remove('d-none');
        } else {
            customDates.classList.add('d-none');
        }
    });
    
    // Mostrar/ocultar filtros específicos com base no tipo de dados
    document.getElementById('data_type').addEventListener('change', function() {
        const dataType = this.value;
        const filterClasses = ['filter-reservations', 'filter-rooms', 'filter-departments', 'filter-users', 'filter-maintenance'];
        
        // Ocultar todos os filtros específicos
        filterClasses.forEach(cls => {
            document.querySelectorAll('.' + cls).forEach(el => {
                el.classList.add('d-none');
            });
        });
        
        // Mostrar filtros específicos para o tipo de dados selecionado
        if (dataType) {
            document.querySelectorAll('.filter-' + dataType).forEach(el => {
                el.classList.remove('d-none');
            });
        }
    });
    
    // Mostrar/ocultar tipos de gráficos
    document.getElementById('show_charts').addEventListener('change', function() {
        const chartTypes = document.getElementById('chart-types');
        if (this.checked) {
            chartTypes.classList.remove('d-none');
        } else {
            chartTypes.classList.add('d-none');
        }
    });
    
    // Enviar formulário via AJAX
    document.getElementById('reportForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const reportTitle = document.getElementById('report_title').value;
        
        // Atualizar título do relatório
        document.getElementById('report-title').innerHTML = '<i class="fas fa-file-alt me-2"></i>' + reportTitle;
        
        // Mostrar indicador de carregamento
        document.getElementById('report-content').innerHTML = `
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Carregando...</span>
                </div>
                <p class="mt-3">Gerando relatório, por favor aguarde...</p>
            </div>
        `;
        document.getElementById('report-placeholder').classList.add('d-none');
        document.getElementById('report-content').classList.remove('d-none');
        
        // Habilitar botões de exportação e impressão
        document.getElementById('export-report').removeAttribute('disabled');
        document.getElementById('print-report').removeAttribute('disabled');
        
        // Enviar requisição
        fetch('/dashboard/reports/custom_report/generate', {
            method: 'POST',
            body: formData
        })
        .then(response => response.text())
        .then(html => {
            document.getElementById('report-content').innerHTML = html;
            
            // Inicializar gráficos se necessário
            if (document.getElementById('show_charts').checked) {
                initializeCharts();
            }
        })
        .catch(error => {
            console.error('Erro:', error);
            document.getElementById('report-content').innerHTML = `
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    Ocorreu um erro ao gerar o relatório. Por favor, tente novamente.
                </div>
            `;
        });
    });
    
    // Função para inicializar gráficos (será implementada pelo backend)
    function initializeCharts() {
        // Esta função será chamada após o carregamento do conteúdo do relatório
        // O backend fornecerá o código JavaScript necessário para inicializar os gráficos
    }
    
    // Exportar relatório
    document.getElementById('export-report').addEventListener('click', function() {
        // Aqui seria implementada a lógica para exportar para Excel
        alert('Funcionalidade de exportação será implementada em breve!');
    });
    
    // Imprimir relatório
    document.getElementById('print-report').addEventListener('click', function() {
        window.print();
    });
</script>
{% endblock %}
