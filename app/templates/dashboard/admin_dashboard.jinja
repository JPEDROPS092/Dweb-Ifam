{% extends "base.jinja" %}

{% block title %}Dashboard Administrativo - Sistema de Gerenciamento de Salas{% endblock %}

{% block extra_css %}
<style>
    .stat-card {
        transition: transform 0.3s;
    }
    .stat-card:hover {
        transform: translateY(-5px);
    }
    .chart-container {
        height: 300px;
    }
    .calendar-day {
        height: 100px;
        overflow-y: auto;
    }
    .calendar-day-header {
        font-weight: bold;
        text-align: center;
    }
    .calendar-day-empty {
        background-color: #f8f9fa;
    }
    .reservation-item {
        padding: 2px 5px;
        margin-bottom: 2px;
        border-radius: 3px;
        font-size: 0.8rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .status-pendente {
        background-color: #fff3cd;
        border-left: 3px solid #ffc107;
    }
    .status-confirmada {
        background-color: #d1e7dd;
        border-left: 3px solid #198754;
    }
    .status-em-andamento {
        background-color: #cfe2ff;
        border-left: 3px solid #0d6efd;
    }
    .status-finalizada {
        background-color: #e2e3e5;
        border-left: 3px solid #6c757d;
    }
    .status-cancelada {
        background-color: #f8d7da;
        border-left: 3px solid #dc3545;
    }
    .today {
        background-color: #e8f4ff;
    }
</style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">
            <i class="fas fa-tachometer-alt me-2"></i>
            Dashboard Administrativo
        </h1>
        
        <div class="btn-group">
            <a href="/dashboard/reports" class="btn btn-outline-primary">
                <i class="fas fa-chart-bar me-1"></i> Relatórios
            </a>
            <button type="button" class="btn btn-outline-secondary" id="refresh-dashboard">
                <i class="fas fa-sync-alt me-1"></i> Atualizar
            </button>
        </div>
    </div>

    <!-- Cards de Estatísticas -->
    <div class="row mb-4">
        <!-- Total de Salas -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2 stat-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total de Salas</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.total_rooms }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-door-open fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="/rooms" class="text-primary">Ver detalhes <i class="fas fa-arrow-right ml-1"></i></a>
                </div>
            </div>
        </div>

        <!-- Reservas Ativas -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2 stat-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Reservas Ativas</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.active_reservations }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="/reservations?status=CONFIRMADA" class="text-success">Ver detalhes <i class="fas fa-arrow-right ml-1"></i></a>
                </div>
            </div>
        </div>

        <!-- Reservas Pendentes -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2 stat-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Reservas Pendentes</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.pending_reservations }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="/reservations?status=PENDENTE" class="text-warning">Ver detalhes <i class="fas fa-arrow-right ml-1"></i></a>
                </div>
            </div>
        </div>

        <!-- Salas Disponíveis -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2 stat-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Salas Disponíveis Agora</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.available_rooms }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="/rooms/available" class="text-info">Ver detalhes <i class="fas fa-arrow-right ml-1"></i></a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Gráfico de Ocupação -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Taxa de Ocupação das Salas (Últimos 7 dias)</h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                            <div class="dropdown-header">Opções:</div>
                            <a class="dropdown-item" href="/dashboard/reports/occupancy_report">Ver Relatório Completo</a>
                            <a class="dropdown-item" href="#" id="download-occupancy-chart">Baixar Gráfico</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#" id="refresh-occupancy-chart">Atualizar Dados</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="occupancyChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gráfico de Reservas por Departamento -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Reservas por Departamento</h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                            <div class="dropdown-header">Opções:</div>
                            <a class="dropdown-item" href="/dashboard/reports/department_report">Ver Relatório Completo</a>
                            <a class="dropdown-item" href="#" id="download-department-chart">Baixar Gráfico</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#" id="refresh-department-chart">Atualizar Dados</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="departmentChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Reservas Pendentes -->
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-warning">Reservas Pendentes de Aprovação</h6>
                    <a href="/reservations?status=PENDENTE" class="btn btn-sm btn-warning">
                        Ver Todas
                    </a>
                </div>
                <div class="card-body">
                    {% if pending_reservations %}
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Sala</th>
                                    <th>Data/Hora</th>
                                    <th>Solicitante</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for reservation in pending_reservations %}
                                <tr>
                                    <td>{{ reservation.title }}</td>
                                    <td>{{ reservation.room_code }}</td>
                                    <td>{{ reservation.start_datetime.strftime('%d/%m/%Y %H:%M') }}</td>
                                    <td>{{ reservation.user_name }}</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/reservations/{{ reservation.id }}" class="btn btn-sm btn-info" title="Detalhes">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-success" title="Aprovar"
                                                    onclick="approveReservation({{ reservation.id }})">
                                                <i class="fas fa-check"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger" title="Rejeitar"
                                                    data-bs-toggle="modal" data-bs-target="#rejectModal" 
                                                    data-reservation-id="{{ reservation.id }}">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i> Não há reservas pendentes de aprovação.
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Próximas Reservas -->
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-success">Próximas Reservas</h6>
                    <a href="/reservations?status=CONFIRMADA" class="btn btn-sm btn-success">
                        Ver Todas
                    </a>
                </div>
                <div class="card-body">
                    {% if upcoming_reservations %}
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Sala</th>
                                    <th>Data/Hora</th>
                                    <th>Solicitante</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for reservation in upcoming_reservations %}
                                <tr>
                                    <td>{{ reservation.title }}</td>
                                    <td>{{ reservation.room_code }}</td>
                                    <td>{{ reservation.start_datetime.strftime('%d/%m/%Y %H:%M') }}</td>
                                    <td>{{ reservation.user_name }}</td>
                                    <td>
                                        <a href="/reservations/{{ reservation.id }}" class="btn btn-sm btn-info" title="Detalhes">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i> Não há próximas reservas confirmadas.
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Salas com Problemas -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-danger">Salas com Problemas</h6>
                    <a href="/rooms?status=MANUTENCAO" class="btn btn-sm btn-danger">
                        Ver Todas
                    </a>
                </div>
                <div class="card-body">
                    {% if maintenance_rooms %}
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Nome</th>
                                    <th>Localização</th>
                                    <th>Departamento</th>
                                    <th>Status</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for room in maintenance_rooms %}
                                <tr>
                                    <td>{{ room.code }}</td>
                                    <td>{{ room.name }}</td>
                                    <td>{{ room.building }}, {{ room.floor }}</td>
                                    <td>{{ room.department_name }}</td>
                                    <td>
                                        <span class="badge bg-danger">Manutenção</span>
                                    </td>
                                    <td>
                                        <a href="/rooms/{{ room.id }}" class="btn btn-sm btn-info" title="Detalhes">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i> Não há salas em manutenção no momento.
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Rejeição -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Rejeitar Reserva</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="rejectForm" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="reason" class="form-label">Motivo da Rejeição *</label>
                        <textarea class="form-control" id="reason" name="reason" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Rejeitar</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Aprovar reserva
    function approveReservation(id) {
        if (confirm('Tem certeza que deseja aprovar esta reserva?')) {
            fetch(`/reservations/${id}/approve`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Erro ao aprovar reserva');
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                alert('Erro ao aprovar reserva');
            });
        }
    }
    
    // Configurar modal de rejeição
    const rejectModal = document.getElementById('rejectModal');
    rejectModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const reservationId = button.getAttribute('data-reservation-id');
        const form = document.getElementById('rejectForm');
        form.action = `/reservations/${reservationId}/reject`;
    });
    
    // Atualizar dashboard
    document.getElementById('refresh-dashboard').addEventListener('click', function() {
        window.location.reload();
    });
    
    // Gráfico de Ocupação
    const occupancyCtx = document.getElementById('occupancyChart').getContext('2d');
    const occupancyChart = new Chart(occupancyCtx, {
        type: 'line',
        data: {
            labels: {{ occupancy_data.labels|tojson }},
            datasets: [{
                label: 'Taxa de Ocupação (%)',
                data: {{ occupancy_data.values|tojson }},
                backgroundColor: 'rgba(78, 115, 223, 0.05)',
                borderColor: 'rgba(78, 115, 223, 1)',
                pointRadius: 3,
                pointBackgroundColor: 'rgba(78, 115, 223, 1)',
                pointBorderColor: 'rgba(78, 115, 223, 1)',
                pointHoverRadius: 5,
                pointHoverBackgroundColor: 'rgba(78, 115, 223, 1)',
                pointHoverBorderColor: 'rgba(78, 115, 223, 1)',
                pointHitRadius: 10,
                pointBorderWidth: 2,
                fill: true
            }]
        },
        options: {
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    max: 100,
                    ticks: {
                        callback: function(value) {
                            return value + '%';
                        }
                    }
                }
            },
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return context.dataset.label + ': ' + context.parsed.y + '%';
                        }
                    }
                }
            }
        }
    });
    
    // Gráfico de Departamentos
    const departmentCtx = document.getElementById('departmentChart').getContext('2d');
    const departmentChart = new Chart(departmentCtx, {
        type: 'doughnut',
        data: {
            labels: {{ department_data.labels|tojson }},
            datasets: [{
                data: {{ department_data.values|tojson }},
                backgroundColor: [
                    '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b',
                    '#5a5c69', '#858796', '#6f42c1', '#20c9a6', '#fd7e14'
                ],
                hoverBackgroundColor: [
                    '#2e59d9', '#17a673', '#2c9faf', '#f4b619', '#e02d1b',
                    '#4e4f58', '#717384', '#5d37a8', '#1aa88f', '#ee7308'
                ],
                hoverBorderColor: 'rgba(234, 236, 244, 1)',
            }]
        },
        options: {
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'right'
                }
            },
            cutout: '70%'
        }
    });
    
    // Download de gráficos
    document.getElementById('download-occupancy-chart').addEventListener('click', function() {
        const link = document.createElement('a');
        link.download = 'ocupacao_salas.png';
        link.href = document.getElementById('occupancyChart').toDataURL('image/png');
        link.click();
    });
    
    document.getElementById('download-department-chart').addEventListener('click', function() {
        const link = document.createElement('a');
        link.download = 'reservas_por_departamento.png';
        link.href = document.getElementById('departmentChart').toDataURL('image/png');
        link.click();
    });
    
    // Atualizar gráficos
    document.getElementById('refresh-occupancy-chart').addEventListener('click', function() {
        fetch('/api/dashboard/occupancy_data')
            .then(response => response.json())
            .then(data => {
                occupancyChart.data.labels = data.labels;
                occupancyChart.data.datasets[0].data = data.values;
                occupancyChart.update();
            });
    });
    
    document.getElementById('refresh-department-chart').addEventListener('click', function() {
        fetch('/api/dashboard/department_data')
            .then(response => response.json())
            .then(data => {
                departmentChart.data.labels = data.labels;
                departmentChart.data.datasets[0].data = data.values;
                departmentChart.update();
            });
    });
</script>
{% endblock %}
