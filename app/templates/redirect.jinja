<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ title }} - IFAM Sistema de Gerenciamento de Salas">
    <title>{{ title }} - IFAM Sistema de Gerenciamento</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/static/css/main.min.css">
    
    <style>
        :root {
            --primary-color: #006400;
            --primary-dark: #004d00;
            --primary-light: #e8f5e9;
            --secondary-color: #1976d2;
            --accent-color: #ff6f00;
            --text-color: #333333;
            --light-text: #6c757d;
            --bg-light: #f8f9fa;
            --bg-dark: #343a40;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, var(--primary-light) 0%, #ffffff 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .redirect-container {
            width: 100%;
            max-width: 600px;
            background-color: white;
            border-radius: 20px;
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
            padding: 40px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .redirect-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
        }
        
        .redirect-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background-color: var(--primary-light);
            color: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            margin: 0 auto 20px;
        }
        
        .redirect-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--text-color);
            margin-bottom: 15px;
        }
        
        .redirect-message {
            font-size: 1.1rem;
            color: var(--light-text);
            margin-bottom: 30px;
        }
        
        .redirect-countdown {
            font-size: 1rem;
            color: var(--light-text);
            margin-top: 20px;
        }
        
        .redirect-countdown span {
            font-weight: 600;
            color: var(--primary-color);
        }
        
        .redirect-progress {
            height: 5px;
            border-radius: 5px;
            background-color: var(--primary-light);
            margin-top: 20px;
            overflow: hidden;
        }
        
        .redirect-progress-bar {
            height: 100%;
            background-color: var(--primary-color);
            width: 100%;
            animation: progress 5s linear;
        }
        
        @keyframes progress {
            from { width: 100%; }
            to { width: 0%; }
        }
    </style>
    
    <meta http-equiv="refresh" content="5;url={{ redirect_url }}">
</head>

<body>
    <!-- Loading overlay -->
    <div id="loading-overlay" class="loading-overlay">
        <div class="loading-spinner"></div>
        <div class="loading-message mt-3">Redirecionando...</div>
    </div>
    
    <div class="redirect-container">
        <div class="redirect-icon">
            {% if status == 'success' %}
            <i class="bi bi-check-circle"></i>
            {% elif status == 'error' %}
            <i class="bi bi-exclamation-triangle"></i>
            {% elif status == 'info' %}
            <i class="bi bi-info-circle"></i>
            {% elif status == 'warning' %}
            <i class="bi bi-exclamation-circle"></i>
            {% else %}
            <i class="bi bi-check-circle"></i>
            {% endif %}
        </div>
        <h1 class="redirect-title">{{ title }}</h1>
        <p class="redirect-message">{{ message }}</p>
        <a href="{{ redirect_url }}" class="btn btn-primary" id="redirectButton">
            <i class="bi bi-arrow-right-circle me-2"></i> Ir Agora
        </a>
        <div class="redirect-countdown">Redirecionando automaticamente em <span id="countdown">5</span> segundos</div>
        <div class="redirect-progress">
            <div class="redirect-progress-bar"></div>
        </div>
    </div>
    
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Custom JS -->
    <script src="/static/js/validation.min.js"></script>
    <script src="/static/js/ui.min.js"></script>
    <script src="/static/js/main.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Countdown timer
            let seconds = 5;
            const countdownElement = document.getElementById('countdown');
            
            const countdown = setInterval(() => {
                seconds--;
                countdownElement.textContent = seconds;
                
                if (seconds <= 0) {
                    clearInterval(countdown);
                    // Show loading overlay when redirecting
                    if (window.IFAM && window.IFAM.ui && window.IFAM.ui.loadingOverlay) {
                        window.IFAM.ui.loadingOverlay.show('Redirecionando...');
                    }
                }
            }, 1000);
            
            // Add loading overlay when clicking the redirect button
            const redirectButton = document.getElementById('redirectButton');
            if (redirectButton) {
                redirectButton.addEventListener('click', function(e) {
                    if (window.IFAM && window.IFAM.ui && window.IFAM.ui.loadingOverlay) {
                        window.IFAM.ui.loadingOverlay.show('Redirecionando...');
                    }
                });
            }
        });
    </script>
</body>
</html>
